<VirtualHost *:80>
    ServerName <%= @params[:server_name] %>
    ServerAlias <% @params[:server_aliases].each do |a| %><%= a %> <% end %>

    RewriteEngine On
    RewriteCond %{HTTPS} off
    RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

    <Directory <%= node[:ganglia][:web][:install_path] %>>
        AllowOverride All
        Order allow,deny
        Allow from all
        Deny from none
    </Directory>

</VirtualHost>

<VirtualHost *:443>
    ServerName <%= @params[:server_name] %>
    ServerAlias <% @params[:server_aliases].each do |a| %><%= a %> <% end %>

    SSLEngine on
    SSLCertificateFile <%= node[:deployer][:certificate][:dir] %>/sslcert.crt
    SSLCertificateKeyFile <%= node[:deployer][:certificate][:dir] %>/sslcert.key

    DocumentRoot <%= node[:ganglia][:web][:install_path] %>
    <Directory <%= node[:ganglia][:web][:install_path] %>>
        AllowOverride All
        Order allow,deny
        Allow from all
        Deny from none
    </Directory>

</VirtualHost>
